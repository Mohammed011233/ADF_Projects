<!DOCTYPE ViewObject SYSTEM "jbo_03_01.dtd">
<!---->
<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="DepartmentsView"
  Version="12.2.1.22.48"
  InheritPersonalization="merge"
  SelectListFlags="1"
  FromListFlags="1"
  WhereFlags="1"
  BindingStyle="OracleName"
  CustomQuery="false"
  SelectAllAttributes="false"
  PageIterMode="Full"
  AccessMode="DEFAULT">
  <EntityUsage
    Name="Departments"
    Entity="model.entity.Departments"/>
  <ViewAttribute
    Name="DepartmentId"
    IsNotNull="true"
    PrecisionRule="true"
    EntityAttrName="DepartmentId"
    EntityUsage="Departments"
    AliasName="DEPARTMENT_ID"/>
  <ViewAttribute
    Name="DepartmentName"
    IsNotNull="true"
    PrecisionRule="true"
    EntityAttrName="DepartmentName"
    EntityUsage="Departments"
    AliasName="DEPARTMENT_NAME"/>
  <ViewAttribute
    Name="ManagerId"
    PrecisionRule="true"
    EntityAttrName="ManagerId"
    EntityUsage="Departments"
    AliasName="MANAGER_ID"/>
  <ViewAttribute
    Name="LocationId"
    PrecisionRule="true"
    EntityAttrName="LocationId"
    EntityUsage="Departments"
    AliasName="LOCATION_ID"/>
  <ViewAttribute
    Name="countOfEmployees"
    IsUpdateable="false"
    IsQueriable="false"
    IsPersistent="false"
    PrecisionRule="true"
    EntityAttrName="countOfEmployees"
    EntityUsage="Departments"
    AliasName="COUNTOFEMPLOYEES"
    Expression="(SELECT COUNT(e.EMPLOYEE_ID)
FROM EMPLOYEES e
 where 
e.DEPARTMENT_ID = DEPARTMENTS.DEPARTMENT_ID 
AND COUNT(e.EMPLOYEE_ID) > 0)"/>
  <ViewAttribute
    Name="totalOfSalary"
    IsQueriable="false"
    IsPersistent="false"
    PrecisionRule="true"
    EntityAttrName="totalOfSalary"
    EntityUsage="Departments"
    AliasName="TOTALOFSALARY"
    Expression="(SELECT SUM(e.SALARY) FROM EMPLOYEES e WHERE e.DEPARTMENT_ID = DEPARTMENTS.DEPARTMENT_ID )"
    IsUpdateable="while_insert"/>
  <ViewAttribute
    Name="maxSalary"
    IsQueriable="false"
    IsPersistent="false"
    PrecisionRule="true"
    EntityAttrName="maxSalary"
    EntityUsage="Departments"
    AliasName="MAX_SALARY"/>
  <ViewLinkAccessor
    Name="EmployeesView"
    ViewLink="model.view.EmpDeptFkLink"
    Type="oracle.jbo.RowIterator"
    IsUpdateable="false"/>
</ViewObject>
